<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loveqh.dao.ProjectDao">

    <select id="getAllProjectsCount" resultType="int">
        select count(*) from project
    </select>

    <select id="findProjectById" resultType="Project" parameterType="int">
        select * from project where id=#{value}
    </select>

    <select id="findProjectsLikeIntro" resultType="Project" parameterType="String">
        select * from project where intro like '%${value}%'
    </select>

    <select id="findAllProjects" resultType="Project">
        select * from project
    </select>

    <delete id="deleteProjectById" parameterType="int">
        delete from project where id=#{value}
    </delete>

    <insert id="addProject" parameterType="Project">
        insert into project(intro, create_time, deadline)
            values(#{intro}, #{createTime}, #{deadline})
    </insert>

    <update id="updateProject" parameterType="Project">
        update project set
            intro=#{intro},
            deadline=#{deadline}
            where id=#{id}
    </update>

</mapper>